{{ form_start(form) }}
<div class="card">
    
    <div class="card-header">
        <h3 class="card-title">Ville</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
        </div>
    </div>

    <div class="card-body">
        <table class="table table-borderless">
            <tbody>
                <tr>
                    <th>Intitulé</th>
                    <td>
                        <div class="row">
                            <div class="col-8">
                                {{ form_row(form.name) }}
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th>Image à la une</th>
                    <td>
                        <div class="row">
                            <div class="col-6">
                                {% if app.request.attributes.get('_route') == 'admin_ville_edit' %}

                                    {% if ville.mediaName %}

                                    <img src="{{ vich_uploader_asset(ville) | imagine_filter('medium_size') }}" class="img-fluid mt-3 mb-3" 
                                        alt="{{ ville.name }}">

                                    {% else %}

                                    <div class="small-box bg-white p-2 text-center">
                                        <i class="fa fa-image text-secondary fa-4x"></i>
                                    </div>

                                    {% endif %}

                                {% endif %}

                                {{ form_row(form.imageFile) }}
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th>Couleur</th>
                    <td>
                        <div class="row">
                            <div class="col-6">
                                {{ form_row(form.hexColor) }}
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th></th>
                    <td><button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
{{ form_end(form) }}
