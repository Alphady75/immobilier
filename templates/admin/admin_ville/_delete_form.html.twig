<form method="post" class="d-inline" action="{{ path('admin_ville_delete', {'id': ville.id}) }}" onsubmit="return confirm('Voullez-vous vraiment supprimer cette ville?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ville.id) }}">
    <button class="btn btn-danger btn-sm"><i class="fa fa-trash-alt"></i> Supprimer</button>
</form>
