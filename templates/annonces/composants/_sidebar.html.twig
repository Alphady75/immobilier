		<aside>
			<div class="widget__sidebar mt-0">
				<div class="widget__sidebar__header">
					<h6 class="text-capitalize">Cat√©gorie</h6>
				</div>
				<div class="widget__sidebar__body">
					<ul class="list-unstyled">
						{% for categorie in categories %}
						<li>
							<a href="{{ path('annonces_categorie', {categorieslug: categorie.slug}) }}" class="text-capitalize">
								{{ categorie.name }}
								<span class="badge badge-primary">{{ categorie.annonces|length }}</span>
							</a>
						</li>
						{% endfor %}
					</ul>
				</div>

			</div>
