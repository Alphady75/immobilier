{{ form_start(form, {attr: {class: 'profile__agent mb-30'}}) }}
<div class="profile__agent__group">

	<div class="profile__agent__header">
		<div class="profile__agent__header-avatar">
			<figure>
				{% if immobilier.user.avatar %}
				<img src="{{ vich_uploader_asset(immobilier.user) | imagine_filter('medium_size') }}" alt="" class="img-fluid">
				{% else %}
				<img src="{{ asset('img/user.jpg') }}" class="img-fluid">
				{% endif %}
			</figure>

			<ul class="list-unstyled mb-0">
				<li>
					<h5 class="text-capitalize">
						{{ immobilier.user.nom }}
						{{ immobilier.user.prenom }}
					</h5>
				</li>
				<li><a href="tel:123456"><i
					class="fa fa-phone-square mr-1"></i>{{ appPhone }}</a></li>
					<li><a href="javascript:void(0)"><i class=" fa fa-building mr-1"></i>
					Agence Immobilier</a>
				</li>
				<li> <a href="{{ path('immobiliers') }}" class="text-primary">Plus de biens Immobiliers</a>
				</li>
			</ul>
		</div>
	</div>

	<div class="profile__agent__body">
		<div class="form-group">
			{{ form_row(form.civilite) }}
		</div>
		<div class="row">
			<div class="col-sm-6">
				<div class="form-group">
					{{ form_row(form.nom) }}
				</div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					{{ form_row(form.prenom) }}
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6">
				<div class="form-group">
					{{ form_row(form.email) }}
				</div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					{{ form_row(form.telephone) }}
				</div>
			</div>
		</div>
		<div class="form-group">
			{{ form_row(form.message) }}
			<small class="text-danger"><sup>*</sup>Champs obligatoire</small>
			<small class="d-block">
				Les informations recueillies sont nécessaires au traitement de votre demande par BARNES. Vous pouvez consulter notre Charte de protection des données en cliquant sur ce <a href="">lien</a>. À tout moment, vous disposez d’un droit d’accès, de modification et de suppression de vos données.
				Merci de cocher la case
			</small>
		</div>
	</div>
	<div class="profile__agent__footer">
		<div class="form-group mb-0">
			<button type="submit" class="btn btn-primary text-capitalize btn-block">
				{{ button_label|default('Envoyer') }} <i class="fa fa-paper-plane ml-1"></i>
			</button>
		</div>
	</div>
</div>

{{ form_end(form) }}
