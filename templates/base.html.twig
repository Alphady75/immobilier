<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Rethouse - Real Estate HTML Template">
    <meta name="keywords" content="Real Estate, Property, Directory Listing, Marketing, Agency" />
    <meta name="author" content="mardianto - retenvi.com">
    <title>{% block title %}Bienvenu!{% endblock %}</title>

    <!-- Facebook and Twitter integration -->
    <meta property="og:title" content="" />
    <meta property="og:image" content="" />
    <meta property="og:url" content="" />
    <meta property="og:site_name" content="" />
    <meta property="og:description" content="" />
    <meta name="twitter:title" content="" />
    <meta name="twitter:image" content="" />
    <meta name="twitter:url" content="" />
    <meta name="twitter:card" content="" />

    <link rel="manifest" href="site.webmanifest">
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="{{ asset('img/favicon.png') }}">

    <meta name="theme-color" content="#3454d1">
    <link href="{{ asset('themes/front/css/styles.css?fd365619e86ad9137a29') }}" rel="stylesheet">
    <style type="text/css">
        .ts-control{
            z-index: 200!important;
        }
        .ts-control .item{
            background: #ab911d!important;
            border: transparent!important;
            color: white!important;
            z-index: 200!important;
        }
        .turbo-progress-bar {
          height: 3px;
          background-color: #ab911d!important;
        }
        .budget .form-control{
            height: auto!important;
        }
        .carousel-inner .carousel-item{
            height: 100vh!important;
            background-position: center;
            background-size: cover!important;
            background-repeat: no-repeat!important;
        }
        .slider-container .container{
            position: relative!important;
        }
        .carousel-inner .carousel-item .slider__content-title h2{
            font-weight: 1em!important;
        }
        .bg__overlay-black{
            position: absolute!important;
            margin: auto!important;
            top: 60%;
            left: 15%;
            width: 70%!important;
        }
        .bg__overlay-black form select{
            z-index: 20!important;
        }
        .navbar .nav-link{
            text-transform: uppercase;
            font-size: .9em;
        }
        .navbar .nav-link:hover{
            color: #ab911d!important;
        }
        .navbar .nav-link.active{
            color: #ab911d!important;
            font-weight: bold;
        }
        .nice-select {
          line-height: 20px;
        }
        .home_search .ts-control {
          border: none!important;
          color: black;
          border-radius: 0!important;
        }
        .input-group-text {
          padding: .75rem .7rem!important;
          background: transparent!important;
          border-right: none!important;
          border-color: #ededed;
        }
        .slider-container .banner__slide-overlay {
          background-color: transparent;
        }
        .slider-container .carousel-caption h2{
            position: absolute!important;
            color: white;
            background: rgba(0,0,0,0.5);
            display: inline-block;
            bottom: 0!important;
            left: 0!important;
            padding: 5px;
            font-size: 1em;
            font-weight: 500;
        }
        @media screen and (max-width: 575px){
            .carousel-inner .carousel-item{
                height: 50vh!important;
            }
            .bg__overlay-black{
                width: 90%!important;
                left: 5%;
                right: 5%;
                top: 40%;
                /*background: white!important;*/
                /*top: 30%;*/
            }
            .bg__overlay-black::before{
                background: transparent!important;
            }
            .bg__overlay-black .search__property{

            }
        }
    </style>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>

<body class="bg-white" data-turbo="false">

    {{ include('partials/front/_flash_message.html.twig') }}

    {% block siteheader %}

    <header {% block headerattribut %}{% endblock %}>
        {% block header %}
            {{ include('partials/front/_header.html.twig') }}
        {% endblock %}

        {% block breadcrumb %}{% endblock %}
    </header>

    {% endblock %}

    {% block body %}{% endblock %}

    {% block footer %}

        {{ include('partials/front/_footer.html.twig') }}

    {% endblock %}

    <!-- SCROLL TO TOP -->
    <a href="javascript:" id="return-to-top"><i class="fa fa-chevron-up"></i></a>
    <!-- END SCROLL TO TOP -->
    <script src="{{ asset('themes/front/js/index.bundle.js?fd365619e86ad9137a29') }}"></script>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>
